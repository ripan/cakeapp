<h1>Generate Report</h1>

<%=flash[:notice]%>

<%= form_tag("/show_report", method: "get", class: "form-inline", id: 'generate_report_form') do %>
  <div class="form-group">
  <%= text_field_tag :datefrom, '', "data-provide"=>'datepicker', placeholder: 'date from', class: "form-control" %>
  </div>
  <div class="form-group">
  <%= text_field_tag :dateto, '', "data-provide"=>'datepicker', placeholder: 'date to', class: "form-control"%>
  </div>
  <div class="form-group">
  <%= select_tag :venue_id, options_from_collection_for_select(Venue.all, "id", "name"), class: "form-control", prompt: 'Select venue'%>
  </div>
  <%= submit_tag("Generate Report", class: "btn btn-default")%>
<% end %>